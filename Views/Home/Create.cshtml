@model FCenter.Models.Gym

@{
    ViewData["Title"] = "Yeni Salon Ekle";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h4 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Yeni Spor Salonu Kaydı</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        @* Sunucu tarafı hatalarını toplu göstermek için *@
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">Salon Adı</label>
                            <input asp-for="Name" class="form-control" placeholder="Örn: Master Fitness Center" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label fw-bold">Adres</label>
                            <input asp-for="Address" class="form-control" placeholder="Mahalle, Sokak, No..." />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="WorkingHours" class="form-label fw-bold">Çalışma Saatleri</label>
                            <input asp-for="WorkingHours" class="form-control" placeholder="09:00 - 22:00" />
                            <span asp-validation-for="WorkingHours" class="text-danger"></span>
                            <small class="text-muted">Format: 00:00 - 00:00</small>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary me-md-2">Vazgeç</a>
                            <button type="submit" class="btn btn-primary px-5">Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@* İstemci Taraflı Doğrulama (Client-side Validation) için gerekli scriptler *@
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}